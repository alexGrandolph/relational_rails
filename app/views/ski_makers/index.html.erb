</div>


<h1>Ski Makers</h1>
<% @ski_makers.each do |maker| %>


  <div id="maker-<%= maker.company_name %>">
    <h2><%=maker.company_name%></h2>
    <strong>Added to Site: </strong>
    <%= maker.created_at %><br>
    <%= link_to 'See Their Skis!', "/ski_makers/#{maker.id}/skis" %>
    <br><%= link_to 'Edit', "/ski_makers/#{maker.id}/edit" %><br>
    <br><%= link_to 'DELETE', "/ski_makers/#{maker.id}", method: :delete %>
    </div>
    <br><br>


<% end %>


</div>
